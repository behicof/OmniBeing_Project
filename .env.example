# OmniBeing Trading System Configuration
# Copy this file to .env and configure your settings

# Exchange API Keys (Required for live trading)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true

# Trading Parameters
DEFAULT_RISK_LEVEL=0.02
MAX_POSITION_SIZE=0.1
STOP_LOSS_PERCENTAGE=0.05
TAKE_PROFIT_PERCENTAGE=0.1
MAX_DAILY_LOSS=0.05

# ML Model Configuration
ML_LEARNING_RATE=0.001
ML_BATCH_SIZE=32
ML_EPOCHS=100
ML_VALIDATION_SPLIT=0.2

# Risk Management
VOLATILITY_THRESHOLD=0.8
NEWS_IMPACT_WEIGHT=0.6

# Database and Caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Dashboard Settings
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8050
DASHBOARD_DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=trading_system.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Data Feed Settings
UPDATE_INTERVAL=1
SYMBOLS=BTCUSDT,ETHUSDT,ADAUSDT
TIMEFRAMES=1m,5m,15m,1h

# Sentiment Analysis APIs (Optional)
NEWS_API_KEY=your_news_api_key_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# AI/ML Model Settings
DEFAULT_PERSONA=neutral
ADAPTIVE_PERSONA=true
MODEL_SAVE_PATH=./models/
FEATURE_COUNT=20